<PropertyList>
  <particlesystem>
    <name>fallout-l</name>
    
    <texture>stone.png</texture>
    
    <condition>
      <and>
	<not><property>sim/multiplay/generic/int[10]</property></not>   
	<greater-than>
	  <property>sim/multiplay/generic/float[7]</property>
	  <value>1</value>
	</greater-than>
	<greater-than>
	  <property>sim/multiplay/generic/float[9]</property>
	  <value>120000</value>
	</greater-than>
      </and>
    </condition>
    
    <emissive>false</emissive>
    <lighting>false</lighting>
    <align>billboard</align>
    <attach>world</attach>
    <placer>
      <type>point</type>
    </placer>
    <shooter>
      <theta-min-deg>89</theta-min-deg>
      <theta-max-deg>-120</theta-max-deg>
      <phi-min-deg>-10</phi-min-deg>
      <phi-max-deg> 10</phi-max-deg>
      <speed-mps>
	<value>120</value>
	<spread>35</spread>
      </speed-mps>
      <rotation-speed>
	<x-min-deg-sec>20</x-min-deg-sec>
	<y-min-deg-sec>20</y-min-deg-sec>
	<z-min-deg-sec>20</z-min-deg-sec>
	<x-max-deg-sec>90</x-max-deg-sec>
	<y-max-deg-sec>90</y-max-deg-sec>
	<z-max-deg-sec>90</z-max-deg-sec>
      </rotation-speed>
    </shooter>
    <counter>
      <particles-per-sec>
	<value>1</value>
	<spread>0.20</spread>
      </particles-per-sec>
    </counter>
    <particle>
      <start>
	<color>
	  <red><value>0.870</value></red>
	  <green><value>0.870</value></green>
	  <blue><value>0.870</value></blue>
	  <alpha><value>0.60</value></alpha>
	</color>
	<size>
	  <value>0.3</value>
	</size>
      </start>
      <end>
	<color>
	  <red><value>0.7</value></red>
	  <green><value>0.7</value></green>
	  <blue><value>0.7</value></blue>
	  <alpha><value>0.05</value></alpha>
	</color>
	<size>
	  <value>0.3</value>
	</size>
      </end>
      <life-sec>
	<value>15</value>
      </life-sec>
      <mass-kg>0.42</mass-kg>
      <radius-m>0.40</radius-m>
    </particle>
    <program>
      <fluid>air</fluid>
      <gravity>true</gravity>
      <wind>false</wind>
    </program>
  </particlesystem>
</PropertyList>
